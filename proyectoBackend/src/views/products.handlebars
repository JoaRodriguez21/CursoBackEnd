<div>
    <div class=" mb-3 d-flex justify-content-center">
        <h1 class="mb-3">Bienvenido {{user.first_name}} a la pagína oficial de Iphone</h1>
        {{#if user}}
            <div class="mb-3 d-flex justify-content-center">
                <p class="m-3" > Rol: {{user.role}}</p>
                <p class="m-3"> email: {{user.email}}</p>
            </div>
        {{/if}}
    </div>
    <div class="d-flex justify-content-center">
        {{#each products}}
            <li>
                <strong>Nombre: </strong>{{this.title}} - 
                <strong>Descripción: </strong>{{this.description}} -
                <strong>Price: </strong>{{this.price}} -
                <strong>Stock: </strong>{{this.stock}} - 
                <strong>Categoria: </strong>{{this.category}} -
                <a href="/api/cart"><button>Agregar al carrito</button></a>
            </li>
        {{/each}}
    </div>

    <div>
        {{#if hasPrevPage}}
            <a href="/products/products/?page={{prevPage}}"><button>Pag Anterior</button></a> 
        {{/if}}

        {{#if hasNextPage}}
            <a href="/products/products/?page={{nextPage}}"><button>Pag Siguiente</button></a>
        {{/if}}
    </div>
</div>